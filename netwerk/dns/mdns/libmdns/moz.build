if CONFIG['MOZ_WIDGET_TOOLKIT'] == 'android':
    EXTRA_COMPONENTS += [
        'nsDNSServiceDiscovery.js',
        'nsDNSServiceDiscovery.manifest',
    ]

    EXTRA_JS_MODULES += [
        'MulticastDNSAndroid.jsm',
        'MulticastDNSFallback.jsm',
    ]

elif CONFIG['MOZ_WIDGET_TOOLKIT'] == 'cocoa' or \
        (CONFIG['MOZ_WIDGET_TOOLKIT'] == 'gonk' and CONFIG['ANDROID_VERSION'] >= '16'):
    UNIFIED_SOURCES += [
        'MDNSResponderOperator.cpp',
        'MDNSResponderReply.cpp',
        'nsDNSServiceDiscovery.cpp',
    ]

    LOCAL_INCLUDES += [
      '/netwerk/base',
    ]

    if CONFIG['MOZ_WIDGET_TOOLKIT'] == 'gonk':
        LOCAL_INCLUDES += [
            '%' + '%s/%s' % (CONFIG['ANDROID_SOURCE'], d) for d in [
                'external/mdnsresponder/mDNSShared',
            ]
        ]
elif CONFIG['MOZ_WIDGET_TOOLKIT'] in ('gtk2', 'gtk3', 'qt'):
    UNIFIED_SOURCES += [
        'AvahiOperator.cpp',
        'nsDNSServiceDiscovery.cpp'
    ]

    CXXFLAGS += [
        '-fPIC',
    ]

    OS_LIBS += [
        'avahi-client',
        'avahi-common'
    ]

    USE_STATIC_LIBS = True

UNIFIED_SOURCES += [
    'nsDNSServiceInfo.cpp',
    'nsMulticastDNSModule.cpp',
]

include('/ipc/chromium/chromium-config.mozbuild')
FINAL_LIBRARY = 'xul'
